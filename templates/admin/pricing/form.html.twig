{% form_theme form 'bootstrap_5_layout.html.twig' %}

<style>
    .admin-form {
        max-width: 500px;
        margin: 0 auto;
    }
    .admin-form .form-control {
        width: 100%;
        height: 48px;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        box-sizing: border-box;
    }
    .admin-form label {
        font-weight: 500;
        margin-bottom: 0.4rem;
        display: block;
    }
    .admin-form .mb-3 {
        margin-bottom: 1.2rem;
    }
    .admin-form button {
        padding: 0.4rem 1.2rem; /* mniejszy przycisk */
        font-size: 0.95rem;
        border-radius: 6px;
        margin-top: 0.8rem; /* odstęp od pól */
    }
</style>

<div class="admin-form">
    <h1 class="h4 mb-4">{{ title }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.serviceName, 'Usługa') }}
            {{ form_widget(form.serviceName, {attr: {class: 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.price, 'Cena PLN') }}
            {{ form_widget(form.price, {attr: {class: 'form-control'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.unit, 'Jednostka') }}
            {{ form_widget(form.unit, {attr: {class: 'form-control'}}) }}
        </div>

        <button class="btn btn-primary">Zapisz</button>
        <a href="{{ path('admin_pricing_index') }}" class="btn btn-link">Anuluj</a>
    {{ form_end(form) }}
</div>
