{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Logowanie{% endblock %}

{% block body %}
  {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <h1 class="mb-4">Zaloguj się</h1>

  <form method="post" action="{{ path('login') }}" style="max-width:520px">
    <div class="mb-3">
      <label class="form-label">E-mail</label>
      <input class="form-control" type="text" name="_username" value="{{ last_username }}">
    </div>
    <div class="mb-3">
      <label class="form-label">Hasło</label>
      <input class="form-control" type="password" name="_password">
    </div>
    <button class="btn btn-primary">Zaloguj</button>
  </form>
{% endblock %}
